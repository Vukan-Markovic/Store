        <TextBox x:Name="txtBrojMobilnogTelefona" HorizontalAlignment="Left" Height="26" Margin="187,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Button x:Name ="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Width="171" Height="26" Click="btnSacuvaj_Click" Background="LawnGreen" Cursor="Hand"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="266,111,-145,0" VerticalAlignment="Top" Width="171" Height="26" Click="btnOtkazi_Click" Background="Red" Cursor="Hand"/>
